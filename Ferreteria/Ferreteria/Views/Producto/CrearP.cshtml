
@{
    ViewBag.Title = "CrearP";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />


<h2>Ingresar Nuevo Producto</h2>



<div class="row">
    <div class="col-lg-6">
        <form class="form-horizontal" action="/Producto/Guardar" method="post">
            <div class="form-group">
                <div class="col-sm-10">
                    Codigo:  <input id="Codigo" type="text" class="form-control" name="Codigo" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    Nombre de Producto:  <input id="NombreP" type="text" class="form-control" name="NombreP" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    Stock:  <input id="Stock" type="text" class="form-control" name="Stock" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    Precio:  <input id="Precio" type="text" class="form-control" name="Precio" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    Tienda: <select name="IdLocal" id="IdLocal" class="form-control">
                        <option value="">------</option>
                        @foreach (var item in ViewBag.Local)
                        {
                            <option value="@item.Id">@item.Id</option>
                        }

                    </select>
                </div>
            </div>
            

            <div class="form-group">

                <div class="col-sm-10">
                    <button type="submit"  class="btn btn-danger" >Guardar</button>
                </div>
            </div>
        </form>
    </div>
    

</div>